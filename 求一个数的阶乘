#include<stdio.h>
int main()
{
	int n = 0;
	int b = 1;
	int c = 1;
	int d = 1;
	int e = 0;
	printf("请输入一个数来求阶乘\n");
	scanf_s("%d",&n);
	while (d <= n)
	{
		do
		{
			c = c * b;
			b++;
		} while (b <= d);
		e = e + c;
		d++;
	}
	printf("%d\n", c);//求n!
	printf("%d\n",e);//求1!+2!+3!+....+n!
	return 0;
}

#include<stdio.h>
int main()
{
	int a = 0;
	int b = 1;
	int c = 1;
	printf("请输入一个数来求阶乘\n");
	scanf_s("%d",&a);
	do
	{
		c = c * b;
		b++;
	} 
	while (b <= a);
	printf("%d\n", c);
	return 0;
}



#include<stdio.h>
//请输出1~100以内的奇偶数
int main()
{
	int a = 0;
	for (a = 1; a <= 100; a+=1)
	{
		if (a % 2 == 1)//(a%2!==0)
		{
			printf("%d 奇数\n", a);
		}
		else
		{
			printf("%d 偶数\n", a);
		}
	}
	return 0;
}

#include <stdio.h>
int main()
{
	int ch=0;
	while ((ch = getchar()) != EOF)
	{
		if (ch < '0' || ch > '9')
			continue;
		putchar(ch);
	}
	return 0;
}




#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
int main()
{
	char password[60] = {0};
	int b;
	int a;
	printf("请输入密码：");
	scanf("%s", &password);//输入密码存放数组password中
//缓冲区中还剩一个'\n',使用while循环将'\n'读走
	while ((a = getchar()) != '\n')
	{
		;
	}
	printf("请输入N/Y确认密码");
	b=getchar();
	if (b == 'Y')
	{
		printf("确认成功");
	}
	else
	{
		printf("确认失败");
	}
	return 0;
}
