#include<stdio.h>
int main()
{
	int n = 0;
	int b = 1;
	int c = 1;
	int d = 1;
	int e = 0;
	printf("请输入一个数来求阶乘\n");
	scanf_s("%d",&n);
	while (d <= n)
	{
		do
		{
			c = c * b;
			b++;
		} while (b <= d);//关键b<=d
		e = e + c;
		d++;
	}
	printf("%d\n", c);//求n!
	printf("%d\n",e);//求1!+2!+3!+....+n!
	return 0;
}


