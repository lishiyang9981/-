#include<stdio.h>
#include<string.h>
#include<windows.h>
#include<stdlib.h>
// 编写代码，演示多个字符从两端移动，向中间汇聚。
int main()
{
	char arr1[] = "YOU LOVE ME 1000,I LOVE 3000";
	char arr2[] = "                            ";
	int left = 0;
	int right = strlen(arr1) - 1;//等价于int right=sizeof(arr1[])/sizeof(arr1[])-2;因为字符串结尾包含\0
	while(left<=right)
	{
		arr2[left] = arr1[left];
		arr2[right] = arr1[right];
		printf("%s\n", arr2);
		Sleep(500);//间隔0.5秒，1000为1秒
		system("cls");//清空屏幕
		left++;
		right--;
	}
	printf("%s\n", arr2);
	return 0;
}



#include<stdio.h>
#include<string.h>
int main()
{
	int i = 0;
	char password[100] = {0};
	for(i=0;i<3;i++)
	{
		printf("请输入密码：\n");
		scanf_s("%s", password,sizeof(password));
		if (strcmp(password,"你是猪")==0)//==不能用来比较两个字符串是否相等，应该使用一个库函数--strcmp
		{
			printf("输入正确\n");
			break;
		}
	}
	if (i == 3)//不可省略
	{
		printf("输入错误过多，程序将关闭！！！\n");
	}
	return 0;
}
