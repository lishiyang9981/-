
#include<stdio.h>
int main()
{
	int a = 1;
	do
	{
		if (a == 3001)
			break;
		printf("爱你%d遍\n", a);
		a++;
	} 
	while (a <= 3300);
	return 0;
}




#include<stdio.h>
int main()
{
	int a = 0;
	int b = 0;
	int i = 1;
	for (; a < 3000; a++)
	{
		for (b=0; b < 3000; b++)
		{

			printf("爱你%d遍\n",i);
			i++;
		}
	}
	return 0;
}
